# ----------------------------------------------------------------------------
# DJANGO CORE
# ----------------------------------------------------------------------------
DJANGO_SECRET_KEY=change-me-in-production-use-50-random-chars
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1,*.vercel.app

# ----------------------------------------------------------------------------
# DATABASE (PostgreSQL Required)
# ----------------------------------------------------------------------------
# Local development:
DATABASE_URL=postgres://dtcc_user:secure-password@localhost:5432/dtcc_django

# Production (Railway example):
# DATABASE_URL=postgres://user:pass@host.railway.app:5432/railway

# ----------------------------------------------------------------------------
# REDIS (Celery + Caching)
# ----------------------------------------------------------------------------
# Local:
REDIS_URL=redis://localhost:6379/0

# Production (Upstash example):
# REDIS_URL=redis://:password@host.upstash.io:6379

# ----------------------------------------------------------------------------
# CELERY
# ----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/0

# ----------------------------------------------------------------------------
# BLOCKCHAIN (QuickNode + Smart Contracts)
# ----------------------------------------------------------------------------
# Development (local Hardhat node):
QUICKNODE_URL=http://localhost:8545
BLOCKCHAIN_RPC_URL=http://localhost:8545
BLOCKCHAIN_NETWORK=hardhat
START_BLOCK_NUMBER=0

# Production (QuickNode Arbitrum):
# QUICKNODE_URL=https://your-endpoint.arbitrum-mainnet.quiknode.pro/YOUR_KEY/
# BLOCKCHAIN_RPC_URL=https://your-endpoint.arbitrum-mainnet.quiknode.pro/YOUR_KEY/
# BLOCKCHAIN_NETWORK=arbitrum
# START_BLOCK_NUMBER=12345678

# Smart Contract Addresses (set after deployment):
